<div class="container">
  <div class="row">
  	<div class="col-sm-6 offset-sm-3">
		<h1 class="text-center"><%= @details["title"] %></h1>
		<%= image_tag "http://image.tmdb.org/t/p/w185/#{@details["poster_path"]}", :class => "center" %>
		<h3 class="text-center"><%= @details["overview"] %></h3>
		<h3 class="text-center"><%= @details["vote_average"] %>/10 Stars</h3>
		</div>
		
		<div class="col-sm-12">
		<h1 class="text-center">Recommendations</h1>
		</div>
		<% @recommendations.each do |recommendation| %>
			<div class="col-sm-4 text-center">
				<%= link_to image_tag("http://image.tmdb.org/t/p/w185/#{recommendation["poster_path"]}"), movie_path(id: recommendation["id"]) %>
				<h2><%= link_to recommendation["title"], movie_path(id: recommendation["id"]) %></h2>
			</div>
		<% end %>
	</div>
</div>



