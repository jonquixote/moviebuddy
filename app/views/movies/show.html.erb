<h1>Movie#show</h1>
<p>Find me in app/views/movie/show.html.erb</p>

<div class="container">
  <div class="row">
  	<div class="col-sm-6 offset-sm-3">
		<h1><%= @details["title"] %></h1>
		<%= image_tag "http://image.tmdb.org/t/p/w185/#{@details["poster_path"]}", :class => "center" %>
		<h3><%= @details["overview"] %></h3>
		</div>


		<% @recommendations.each do |recommendation| %>
			<div class="col-sm-4">
				<%= link_to image_tag("http://image.tmdb.org/t/p/w185/#{recommendation["poster_path"]}"), movie_path(id: recommendation["id"]) %>
				<h2><%= link_to recommendation["title"], movie_path(id: recommendation["id"]) %></h2>
			</div>
		<% end %>
	</div>
</div>



